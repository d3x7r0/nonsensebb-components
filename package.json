{
  "name": "@nonsensebb/components",
  "version": "2020.6.6",
  "description": "Re-usable components for NonsenseBB websites",
  "license": "MIT",
  "author": "Luis <Dextro> Nabais",
  "main": "src/js/index.js",
  "esnext": {
    "main": "src/js/index.js"
  },
  "engines": {
    "node": ">= 10.0.0"
  },
  "scripts": {
    "start": "npm run cosmos",
    "build": "npm run build:cosmos",
    "cosmos": "cosmos",
    "build:cosmos": "cosmos-export",
    "fix": "npm run fix:js && npm run fix:styles",
    "fix:js": "eslint --fix --ext .js --ext .jsx src tests *.js",
    "fix:styles": "stylelint src/**/*.sass src/**/*.scss src/**/*.css --fix",
    "lint": "npm run lint:js && npm run lint:styles",
    "lint:js": "eslint ${ESLINT_OPTS} --ext .js --ext .jsx src tests *.js",
    "lint:styles": "stylelint src/**/*.sass src/**/*.scss src/**/*.css",
    "test": "npm run test:js",
    "test:js": "NODE_ENV=test jest ${JEST_OPTS}",
    "test:js:update": "NODE_ENV=test jest -u"
  },
  "peerDependencies": {
    "classnames": "^2.2.6",
    "lodash": "^4.17.15",
    "preact": "^10.4.4",
    "prop-types": "^15.7.2",
    "react-image-lightbox": "^5.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.3",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.1",
    "@nonsensebb/eslint-config-preact": "^0.1.7",
    "@nonsensebb/stylelint-config-scss": "^0.1.4",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.1.0",
    "babel-loader": "^8.1.0",
    "classnames": "^2.2.6",
    "css-loader": "^3.6.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^2.2.0",
    "enzyme-to-json": "^3.5.0",
    "eslint": "^7.3.1",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "html-webpack-plugin": "^4.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.1.0",
    "jest-junit": "^11.0.1",
    "lodash": "^4.17.15",
    "normalize.css": "^8.0.1",
    "preact": "^10.4.4",
    "prop-types": "^15.7.2",
    "react": "github:preact-compat/react#1.0.0",
    "react-cosmos": "^5.4.0",
    "react-dom": "github:preact-compat/react-dom#1.0.0",
    "react-feather": "^2.0.8",
    "react-image-lightbox": "^5.1.1",
    "sass": "^1.26.9",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.2.1",
    "stylelint": "^13.6.1",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.18.0",
    "webpack": "^4.43.0"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/tests/setupTests.js"
    ],
    "moduleNameMapper": {
      "^react$": "preact/compat",
      "^react-dom/test-utils$": "preact/test-utils",
      "^react-dom$": "preact/compat",
      "\\.(css|scss|sass)$": "identity-obj-proxy"
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  }
}
